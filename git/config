[init]
	defaultBranch = main

[pull]
	rebase = false

[core]
    editor = nvim
    symlinks = false
    hooksPath = ~/.config/git/hooks

[alias]
  bc = !git branch --merged | grep -Ev '\\*|main|master|development' | xargs git branch -d
  c = commit -m
  cl = clean -fd
  d = diff
  s = status

[user]
	name = Naoya Furudono
	email = naoyafurudono@gmail.com

[ghq]
	root = ~/src
    user = naoyafurudono

[ghq "https://git.pepabo.com/"]
	vcs = git

[include]
  path = ~/.local/git/config

